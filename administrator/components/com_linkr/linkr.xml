<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0" method="upgrade">
	<name>Linkr</name>
	<version>2.3.8</version>
	<creationDate>April 2008</creationDate>
	<author>Frank</author>
	<authorUrl>http://j.l33p.com/linkr</authorUrl>
	<license>http://www.gnu.org/licenses/gpl.html (GNU/GPL)</license>
	<description>Linkr Extension</description>
	<files folder="frontend">
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<filename>linkr.php</filename>
		<filename>metadata.xml</filename>
		<filename>router.php</filename>
		<folder>assets</folder>
		<folder>views</folder>
	</files>
	<administration>
		<menu img="components/com_linkr/assets/linkr.gif">Linkr</menu>
		<files folder="backend">
			<filename>index.html</filename>
			<filename>admin.linkr.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>defines.php</filename>
			<filename>helper.php</filename>
			<filename>model.php</filename>
			<filename>view.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
		</files>
		<languages folder="backend">
			<language tag="en-GB">en-GB.com_linkr.ini</language>
			<language tag="es-ES">es-ES.com_linkr.ini</language>
			<language tag="et-EE">et-EE.com_linkr.ini</language>
			<language tag="fr-FR">fr-FR.com_linkr.ini</language>
			<language tag="it-IT">it-IT.com_linkr.ini</language>
			<language tag="ro-RO">ro-RO.com_linkr.ini</language>
			<language tag="ru-RU">ru-RU.com_linkr.ini</language>
		</languages>	
	</administration>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>
	<installfile>install.linkr.php</installfile>
	<uninstallfile>uninstall.linkr.php</uninstallfile>
	
	<!-- Akeeba Restore Point -->
	<restorepoint>
		<customfiles>
			<file>plugins/content/linkr_content.php</file>
			<file>plugins/content/linkr_content.xml</file>
			<file>plugins/editors-xtd/linkr_button.php</file>
			<file>plugins/editors-xtd/linkr_button.xml</file>
		</customfiles>
	</restorepoint>
</install>
